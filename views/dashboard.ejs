<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Conversations Dashboard</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f9f9f9;
      padding: 20px;
    }
    h2 {
      margin-top: 40px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 40px;
    }
    th, td {
      padding: 10px;
      border: 1px solid #ddd;
      text-align: left;
      vertical-align: top;
    }
    th {
      background-color: #f1f1f1;
    }
    .platform-badge {
      padding: 2px 6px;
      font-size: 12px;
      border-radius: 4px;
      color: white;
    }
    .instagram { background-color: #c13584; }
    .messenger { background-color: #0078FF; }
    .whatsapp { background-color: #25D366; }
    .unknown { background-color: gray; }
  </style>
</head>
<body>

  <h1>ðŸ§¾ Conversations Dashboard</h1>

  <% Object.keys(grouped).forEach(userId => { %>
    <h2>User ID: <%= userId %></h2>
    <table>
      <thead>
        <tr>
          <th>Timestamp</th>
          <th>Message</th>
          <th>AI Reply</th>
          <th>Source</th>
          <th>Layer</th>
          <th>Platform</th>
        </tr>
      </thead>
      <tbody>
        <% grouped[userId].forEach(convo => { %>
          <tr>
            <td><%= new Date(convo.timestamp).toLocaleString() %></td>
            <td><%= convo.message %></td>
            <td>
              <%= typeof convo.ai_reply === 'object'
                    ? (convo.ai_reply.reply || JSON.stringify(convo.ai_reply))
                    : convo.ai_reply %>
            </td>
            <td><%= convo.source || 'text' %></td>
            <td><%= typeof convo.ai_reply === 'object'
                    ? (convo.ai_reply.source || JSON.stringify(convo.ai_reply))
                    : convo.ai_reply %></td>
            <td>
              <span class="platform-badge <%= convo.platform %>">
                <%= convo.platform || 'unknown' %>
              </span>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% }) %>

</body>
</html>
